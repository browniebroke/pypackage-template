[tox]
isolated_build = true
requires =
    tox>=4.2
env_list =
    py314-django{52}
    py313-django{52,51}
    py312-django{52,51,50,42}
    py311-django{52,51,50,42}
    py310-django{52,51,50,42}

[testenv]
runner = uv-venv-lock-runner
set_env =
    PYTHONDONTWRITEBYTECODE=1
dependency_groups =
    dev
deps =
    django52: django52
    django51: django51
    django50: django50
    django42: django42
commands =
    python \
      -m coverage run \
      -m pytest {posargs:tests}
