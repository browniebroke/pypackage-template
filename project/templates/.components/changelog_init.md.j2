%}{%      for release in releases[:-1]
%}{{        "\n"
}}{%        include "versioned_changes.md.j2"
-%}{{       "\n"
}}{%      endfor
%}{%    endif
%}{#
   #    First Release
#}{%    if releases | length > 0
%}{%      set release = releases[-1]
%}{{      "\n"
}}{%      include "first_release.md.j2"
-%}{{     "\n"
}}{%    endif
%}
